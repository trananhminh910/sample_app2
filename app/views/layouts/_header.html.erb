<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container bg-warning">
    <%= link_to t("sample"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), home_path %></li>
        <li><%= link_to t("help"), help_path %></li>
        <li><%= link_to t("english"), locale: :en %></li>
        <li><%= link_to t("vietnamese"),locale: :vi %></li>
        <li>
          <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t "account" %>
            <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("Profile"), current_user %></li>
              <li><%= link_to t("Settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("Log_out"), logout_path, method: :destroy %></li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to t("log_in"), login_path %></li>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>
