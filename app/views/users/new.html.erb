<% provide :title, t("sign_up") %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label t ".name" %>
      <%= f.text_field :name %>
      <%= f.label t ".account" %>
      <%= f.text_field :account_name %>
      <%= f.label t ".email" %>
      <%= f.email_field :email %>
      <%= f.label t ".age" %>
      <%= f.number_field :age %>
      <%= f.label t ".gender" %>
      <%= f.text_field :gender %>
      <%= f.label t ".password" %>
      <%= f.password_field :password %>
      <%= f.label t ".confirmation" %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("sign_up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
