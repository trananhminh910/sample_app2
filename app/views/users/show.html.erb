<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <table class="table">
      <tbody>
        <tr>
          <td><%= t "account" %></td>
          <td><%= @user.account_name %></td>
        </tr>
        <tr>
          <td><%= t "email" %></td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td><%= t "age" %></td>
          <td><%= @user.age %></td>
        </tr>
        <tr>
          <td><%= t "gender" %></td>
          <td><%= @user.gender %></td>
        </tr>
      </tbody>
    </table>
  </aside>
</div>
