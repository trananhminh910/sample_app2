<% provide :title, t("log_in") %>
<% provide :button_text, t("log_in") %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label t ".account" %>
      <%= f.text_field :account_name, class: "form-control", required:"required" %>
      <%= f.label t ".password" %>
      <%= link_to t(".forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control", required:"required" %>
      <%= f.label t(".remember_me"), class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span> <%= t ".remember_me" %></span>
      <% end %>
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "new_user?" %><%= link_to t("sign_up"), signup_path %></p>
  </div>
</div>
